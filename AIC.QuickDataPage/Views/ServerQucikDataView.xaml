                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding SelectedServerChangedComamnd}"  CommandParameter="{Binding SelectedItem, ElementName=servers}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
