    <ControlTemplate x:Key="ConnectorDecoratorTemplate" TargetType="{x:Type Control}">
        <Grid Margin="-5" >
            <s:Connector DataContext="{Binding LeftConnector}" Orientation="Left" VerticalAlignment="Center" HorizontalAlignment="Left" />
            <s:Connector DataContext="{Binding TopConnector}" Orientation="Top" VerticalAlignment="Top" HorizontalAlignment="Center" />
