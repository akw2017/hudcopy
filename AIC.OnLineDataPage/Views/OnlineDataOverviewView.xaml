                        </DataTrigger>
                        <DataTrigger Binding="{Binding Alarm}" Value="LowAlert">
                            <Setter TargetName="txtName" Property="Foreground" Value="DarkOrange" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Alarm}" Value="HighDanger">
