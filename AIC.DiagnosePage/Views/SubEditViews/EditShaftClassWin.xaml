                                        <TextBlock Text="{Binding Component.SCRs}" VerticalAlignment="Center"/>
                                        <TextBlock Text="交流电机:" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Component.IsAC}" VerticalAlignment="Center"/>
