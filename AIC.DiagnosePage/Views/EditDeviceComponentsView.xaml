                                    </i:Interaction.Triggers>
                                </ListBox>
                            </StackPanel>
                            <StackPanel x:Name="controlpanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Hidden">
